
@{
    ViewBag.Title = "RegisterUser";
}
<!-- Register page -->
<div class="heading">
    <p>Registration</p>
</div>
<form method="POST" action="/Home/NewUser">
        <center>
            <table>
                <tbody>
                    <tr>
                        <td><label for="username">First name </label></td>
                        <td><input type="text" name="fname" /></td>
                    </tr>
                    <tr>
                        <td><label for="password">Last Name </label></td>
                        <td><input type="text" name="lname" /></td>
                    </tr>
                    <tr>
                        <td><label for="password">Email </label></td>
                        <td><input type="text" name="email" /></td>
                    </tr>
                    <tr>
                        <td><label for="password">Phone # </label></td>
                        <td><input type="text" name="phone" /></td>
                    </tr>
                    <tr>
                        <td><label for="password">Username </label></td>
                        <td><input type="text" name="username" /></td>
                    </tr>
                    <tr>
                        <td><label for="password">Password </label></td>
                        <td><input type="password" name="password" /></td>
                    </tr>
                    <tr>
                        <td colspan="2"><button type="submit" value="NewUser">Submit</button></td>
                    </tr>
                    <tr>
                        <td colspan="2"></td>
                    </tr>
                </tbody>
            </table>
            <br />
            Already registered? @Html.ActionLink("Log in here", "Login", "Home")
        </center>
</form>


